{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    // best practices
    "no-extra-parens": 2,
    "accessor-pairs": 2,
    "array-callback-return": 2,
    "block-scoped-var": 2,
    "complexity": [2, {"max": 3}],
    "consistent-return": 2,
    "curly": 2,
    "default-case": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": [2, "always"],
    "guard-for-in": 2,
    "no-alert": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-empty-function": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-label": 2,
    "no-floating-decimal": 2,
    "no-implicit-globals": 2, // doesn't apply in modules
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-labels": [2, {"allowSwitch": true}],
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 0,
    "no-multi-str": 0,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-param-reassign": [2, {"props": false}],
    "no-proto": 2,
    "no-redeclare": [2, {"builtinGlobals": true}],
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": 2,
    "no-unused-labels": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-useless-escape": 2,
    "no-void": 2,
    "no-warning-comments": 2,
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,
    "wrap-iife": 2,
    "no-implicit-coercion": 2,
    // variables
    "init-declarations": 2,
    "no-catch-shadow": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-use-before-define": 2,
    // node
    "callback-return": 2,
    "global-require": 2,
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-env": 1,
    "no-process-exit": 2,
    "no-sync": 1,
    // style
    "brace-style": 2,
    "camelcase": 2,
    "comma-style": [2, "last"],
    "func-style": [2, "declaration", {"allowArrowFunctions": true}],
    "id-length": 2,
    "lines-around-comment": [2, { "beforeBlockComment": true, "allowObjectStart": true }],
    "max-depth": 2,
    "max-len": [2, 120],
    "max-lines": [2, 500],
    "max-nested-callbacks": 2,
    "max-params": [2, 5],
    "max-statements": 2,
    "max-statements-per-line": 2,
    "new-cap": 2,
    "new-parens": 2,
    "newline-before-return": 2,
    "no-array-constructor": 2,
    "no-bitwise": 2,
    "no-continue": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-mixed-operators": 2,
    "no-negated-condition": 2,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-unneeded-ternary": 2,
    "no-underscore-dangle": [2, {"allowAfterThis": true}],
    "object-property-newline": [2, { "allowMultiplePropertiesPerLine": true }],
    "one-var": [2, "never"],
    "one-var-declaration-per-line": 2,
    "operator-assignment": [2, "never"],
    "operator-linebreak": [2, "none"],
    "quote-props": 2,
    "wrap-regex": 2,
    "semi": 2,
    "no-tabs": 2,
    // es6
    "arrow-body-style": [2, "always"],
    "no-confusing-arrow": 2,
    "no-duplicate-imports": [2, {"includeExports": true}],
    "no-useless-computed-key": 2,
    "no-useless-constructor": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-reflect": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "sort-imports": 2,
    // default overrides
    "no-console": [2, {"allow": ["log"]}]
  }
}
