  "author": "TED Vortex <ted.vortex@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/superleap/github-issues-label-sync/issues"
  },
  "homepage": "https://github.com/superleap/github-issues-label-sync#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "github": "^2.1.0"
  },
  "devDependencies": {
    "@semantic-release/last-release-npm": "https://github.com/vrtxf/last-release-npm/tarball/b0615aa9cc3bfd9f5a4b8a108b50a8697f544dd1",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "bithound": "^1.3.0",
    "commitizen": "^2.8.2",
    "conventional-changelog": "^1.1.0",
    "cz-conventional-changelog": "^1.1.6",
    "esdoc": "^0.4.7",
    "eslint": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-codecov": "^2.0.2",
    "gulp-esdoc": "^0.2.0",
    "gulp-eslint": "^3.0.1",
    "gulp-exclude-gitignore": "^1.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-istanbul": "^1.0.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-mocha": "^2.2.0",
    "gulp-nsp": "^2.4.1",
    "gulp-plumber": "^1.1.0",
    "mocha": "^2.5.3",
    "nsp": "^2.6.0",
    "read-package-json": "^2.0.4",
    "semantic-release": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "getLastRelease": {
      "path": "./node_modules/@semantic-release/last-release-npm"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-es2015-block-scoping"
    ]
  }
}
