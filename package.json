{
  "name": "github-issues-label-sync",
  "description": "Small tool used to create identical github issue labels",
  "main": "lib/LabelSync.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "nyc gulp",
    "prepublish": "gulp prepublish",
    "deploy": "gulp deploy",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/superleap/github-issues-label-sync.git"
  },
  "keywords": [
    "github",
    "github issues",
    "github issue labels",
    "github repository labels",
    "github labels",
    "dev",
    "tool",
    "sync"
  ],
  "author": "TED Vortex <ted.vortex@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/superleap/github-issues-label-sync/issues"
  },
  "homepage": "https://github.com/superleap/github-issues-label-sync#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "github": "^12.0.0"
  },
  "devDependencies": {
    "@semantic-release/last-release-npm": "https://github.com/vrtxf/last-release-npm/tarball/da5a0f2411e2add6f5b0b990b4a12fad3245cfac",
    "babel-core": "^6.13.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.10.1",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "bithound": "1.7.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "del": "^2.2.2",
    "esdoc": "^0.4.8",
    "esdoc-hacker-vision": "^1.1.0",
    "esdoc-node": "^1.0.0",
    "eslint": "^3.3.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-esdoc": "^0.3.0",
    "gulp-eslint": "^3.0.1",
    "gulp-exclude-gitignore": "^1.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-load-plugins": "^1.2.4",
    "gulp-nsp": "^2.4.2",
    "gulp-spawn-mocha": "^3.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "nsp": "^2.6.1",
    "nyc": "^10.0.0",
    "read-package-json": "^2.0.4",
    "semantic-release": "^6.3.0",
    "sinon": "^1.17.5",
    "snyk": "^1.18.0",
    "standard-changelog": "0.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "getLastRelease": {
      "path": "./node_modules/@semantic-release/last-release-npm"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-es2015-block-scoping"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true
  }
}
